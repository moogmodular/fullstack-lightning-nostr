{
    "name": "nostr-bot",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "preinstall": "npm --prefix packages/db-prisma install  && npm --prefix packages/app install && npm --prefix packages/worker install",
        "inst": "yarn --cwd packages/db-prisma && yarn --cwd packages/app && yarn --cwd packages/worker",
        "dev:worker": "yarn --cwd packages/worker dev",
        "dev:next": "yarn --cwd packages/app dev",
        "dev": "run-p dev:* --print-label",
        "build:next": "npm --prefix packages/app run build",
        "build:worker": "npm --prefix packages/worker run build",
        "build": "run-p build:* --print-label",
        "start:next": "npm --prefix packages/app run start",
        "start:worker": "npm --prefix packages/worker run start",
        "start": "run-p start:* --print-label",
        "generate:prisma": "yarn --cwd packages/db-prisma npx prisma generate"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "useTabs": false,
        "tabWidth": 4,
        "semi": false,
        "bracketSpacing": true,
        "trailingComma": "all"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "eslint": "^8.38.0",
        "eslint-config-next": "^13.3.0",
        "prettier": "^2.8.7",
        "prettier-plugin-tailwindcss": "^0.2.7",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0"
    },
    "workspaces": [
        "packages/*"
    ]
}
