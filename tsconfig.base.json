{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "skipLibCheck": true,
    "composite": true,
    "incremental": true
  },
  "exclude": ["packages/**/tests/**"],
  "references": [
    {
      "path": "./packages/*"
    },
  ]
}

